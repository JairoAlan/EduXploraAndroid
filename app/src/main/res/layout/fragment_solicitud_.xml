<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Solicitud_Fragment">

    <!-- TODO: Update blank fragment layout -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#e8e8e9">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="30sp"
            android:layout_marginRight="30dp"
            android:text="Solicitudes"
            android:textSize="30sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:id="@+id/tvEvalua"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvEvalua"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="30sp"
            android:layout_marginRight="30dp"
            android:text="Consulta el estatus de tu visita guiada"
            android:textSize="18sp"
            android:textColor="@color/black"
            android:id="@+id/tvconsul"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_below="@+id/tvconsul"
            android:layout_marginLeft="30sp"
            android:layout_marginRight="30sp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="50sp">

            <LinearLayout
                android:layout_width="350sp"
                android:layout_height="140sp"
                android:orientation="horizontal"
                android:background="#666e93">

                <ImageView
                    android:layout_width="75dp"
                    android:layout_height="85dp"
                    android:layout_margin="10dp"
                    android:background="@drawable/ch"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Nombre:"
                        android:textColor="@color/black"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="10dp"
                        android:id="@+id/tvNombre"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Descripción:"
                        android:textColor="@color/black"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        android:layout_marginLeft="10dp"
                        android:id="@+id/tvDescripcion"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Dirección:"
                        android:textColor="@color/black"
                        android:textSize="15sp"
                        android:layout_marginLeft="10dp"
                        android:id="@+id/tvDireccion"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="URL:"
                        android:textColor="@color/black"
                        android:textSize="15sp"
                        android:layout_marginLeft="10dp"
                        android:id="@+id/tvURL"/>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="130sp"
                            android:layout_height="wrap_content"
                            android:text="Fecha: "
                            android:textColor="@color/black"
                            android:textSize="15sp"
                            android:layout_marginLeft="10dp"
                            android:id="@+id/tvfecha"/>

                        <Button
                            android:layout_width="40sp"
                            android:layout_height="40sp"
                            android:layout_marginLeft="10sp"
                            android:background="@color/white"
                            android:id="@+id/btnVerde"/>

                        <Button
                            android:layout_width="40sp"
                            android:layout_height="40sp"
                            android:layout_marginLeft="10sp"
                            android:background="@color/white"
                            android:id="@+id/btnRojo"/>


                    </LinearLayout>

                </LinearLayout>


            </LinearLayout>

