<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".buscar_Coor">

    <!-- TODO: Update blank fragment layout -->

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">



        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Busqueda"
            android:textSize="25sp"
            android:textColor="#000000"
            android:layout_marginTop="20sp"
            android:layout_marginLeft="145sp"
            android:id="@+id/tvBus"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Â¿Listo para explorar?"
            android:textSize="15sp"
            android:textColor="#000000"
            android:layout_below="@+id/tvBus"
            android:layout_marginTop="20sp"
            android:layout_marginLeft="135sp"
            android:id="@+id/tvListo"/>

        <RadioGroup
            android:layout_width="250sp"
            android:layout_height="80sp"
            android:orientation="vertical"
            android:layout_below="@+id/tvListo"
            android:layout_marginTop="10sp"
            android:layout_marginLeft="50sp"
            android:layout_marginRight="15sp"
            android:id="@+id/rgIdCar">

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:id="@+id/rbCar"/>

        </RadioGroup>

        <RadioGroup
            android:layout_width="250sp"
            android:layout_height="80sp"
            android:orientation="vertical"
            android:layout_below="@+id/rgIdCar"
            android:layout_marginTop="45sp"
            android:layout_marginLeft="50sp"
            android:layout_marginRight="15sp"
            android:id="@+id/rgNom">

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:id="@+id/rbMateria"/>

        </RadioGroup>

        <Button
            android:layout_width="280sp"
            android:layout_height="50sp"
            android:layout_below="@id/rgNom"
            android:layout_marginLeft="50sp"
            android:layout_marginTop="35sp"
            android:background="#BE3B3B"
            android:text="Buscar"
            android:textSize="20sp"
            android:id="@+id/btnBuscar"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:layout_below="@+id/btnBuscar"
            android:layout_margin="20sp"/>

    </RelativeLayout>

</FrameLayout>