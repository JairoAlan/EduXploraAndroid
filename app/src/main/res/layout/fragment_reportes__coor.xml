<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".reportes_Coor">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Reportes"
            android:textSize="40sp"
            android:layout_marginTop="10sp"
            android:layout_marginLeft="100sp"
            android:layout_marginRight="80sp"
            android:id="@+id/tvRepor"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Herramienta de generación de reportes"
            android:textSize="25sp"
            android:textAlignment="center"
            android:layout_below="@id/tvRepor"
            android:layout_marginTop="10sp"
            android:layout_marginLeft="70sp"
            android:layout_marginRight="80sp"
            android:id="@+id/tvHerra"/>

        <LinearLayout
            android:layout_width="320sp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#35B5D9"
            android:layout_margin="60sp"
            android:layout_below="@id/tvHerra"
            android:id="@+id/llPrimera">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Reporte General de Visitas Guiadas y Eventos Académicos Externos"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:textAlignment="center"
                android:padding="15sp"
                android:id="@+id/tvRepoGen"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Generar"
                android:textSize="25sp"
                android:layout_margin="10sp"
                android:background="#115366"
                android:id="@+id/btnRepo_Gen"/>

        </LinearLayout>


    </RelativeLayout>


</FrameLayout>